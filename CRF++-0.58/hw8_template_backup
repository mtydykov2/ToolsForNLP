# Unigram
U01:%x[-2,1]
U02:%x[-1,1]
U03:%x[0,0]
U04:%x[0,1]
U11:%x[1,1]
U12:%x[2,1]

#bigram POS sequence
U13:%x[-2,1]/%x[-1,1]
U14:%x[-1,1]/%x[0,1]
U15:%x[0,1]/%x[1,1]
U16:%x[1,1]/%x[2,1]

#trigram POS sequence
U17:%x[-2,1]/%x[-1,1]/%x[0,1]
U18:%x[-1,1]/%x[0,1]/%x[1,1]
U19:%x[0,1]/%x[1,1]/%x[2,1]

